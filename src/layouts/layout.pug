block variables
include ../blocks/mixins

doctype html
html(lang='ru' class=htmlMods)
  block head
    head
      meta(charset='utf-8')
      title=pageTitle
      meta(content='width=device-width, initial-scale=1' name='viewport')
      meta(content='ie=edge' http-equiv='x-ua-compatible')
      link(href='' rel='icon' type='image/x-icon')
      link(href='/libs/swiper/swiper-bundle.min.css' rel='stylesheet')
      link(href='/libs/select2/select2.min.css' rel='stylesheet')
      link(href='/libs/plyr/plyr.min.css' rel='stylesheet')
      link(href='/libs/datepicker/datepicker.min.css' rel='stylesheet')
      script(src='https://api-maps.yandex.ru/2.1/?apikey=7742add4-5d3c-4060-9f01-67963d12fb4e&lang=ru_RU' type='text/javascript')

  body(ontouchstart)
    .wrapper(style=(isEmptyPage ? 'background: #fff;' : ''))
      if isEmptyPage
        block content
      else
        block header
          include ../blocks/header/header
        +navbar
        block content
        block footer
          include ../blocks/footer/footer
    block scripts
      script(src='/libs/jquery/jquery-3.6.4.min.js')
      script(src='/libs/swiper/swiper-bundle.min.js')
      script(src='/libs/plyr/plyr.min.js')
      script(src='/libs/select2/select2.min.js')
      script(src='/libs/datepicker/datepicker-full.min.js')
      script(type='module' src='../../js/index.js')
