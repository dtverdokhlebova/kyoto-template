extends ../../layouts/layout

block variables
  -
    const pageName = 'promotions'
    const pageTitle = 'Акции'

block content
  main.main
    +section('--pt-s, --mob-pt-xxxs')
      .inner
        +section-head('--mb, --mob-pr')
          +ui-h2('Акции', 'section-head').text-brown
        +promotions-list
        +section-foot.text-center
          +ui-button('Показать еще', '--l-min-w-s, --outline-gradient, --mob-w-100')(href='#')
    +section('--pt-0')
      .inner
        +ask-question
