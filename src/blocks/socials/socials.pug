mixin socials(items, mods, iconsMod = '')
  -
    const baseName = 'socials'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .socials(class=allMods)&attributes(attributes)
    each item in items
      a.socials__item(href='#')
        .socials__icon
          if item.isImg
            img(src=`../../images/${item.icon}.svg`, alt='')
          else
            +svg(item.icon + iconsMod)
        if item.text
          +ui-p2(item.text, 'socials, --mob-s')
    block
